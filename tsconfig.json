{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,

    "target": "ES6",
    "outDir": "out",
    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@redux/*": ["src/redux/*"],
      "@redux": ["src/redux"],
      "@components": ["src/components"],
      "@mui/system": ["@mui/material/node_modules/@mui/system"]
    }
  },
  "exclude": ["./out/**/*", "./node_modules/**/*", "cypress/**/*.ts"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "",
    ".storybook/*.ts",
    "src/components/modals/waitModal",
    "src/components/gooleMap",
    "src/components/modals/directionsValidationModal",
    "src/components/Pixel/index.tsx",
    "src/components/Pixel/facebook/pixel-1.jsx",
    "src/components/modals/addEditRoofModal",
    "src/components/modals/directionsValidationModal"
  ]
}
